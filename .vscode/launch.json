{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Admin (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/admin",
      "preLaunchTask": "dev:admin"
    },
    {
      "name": "API (Wrangler)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "cwd": "${workspaceFolder}",
      "resolveSourceMapLocations": null,
      "attachExistingChildren": false,
      "autoAttachChildProcesses": false,
      "preLaunchTask": "dev:api"
    }
  ]
}
